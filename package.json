{
  "name": "hsmath",
  "version": "0.0.1",
  "description": "high school mathematics library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kelvinsjk/hsmath.git"
  },
  "author": "Kelvin Soh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kelvinsjk/hsmath/issues"
  },
  "homepage": "https://github.com/kelvinsjk/hsmath#readme",
  "files": [
    "lib/**/*"
  ],
  "keywords": ["math"],
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  }
}
